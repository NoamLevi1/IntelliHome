@model IntelliHome.Cloud.AccountResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "_Layout";
}

<h2>Reset Password</h2>
<div asp-validation-summary="All"
     class="text-danger">
</div>


@if (ViewBag.Message != null)
{
    <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
}
<form method="post">
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password"
               class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"
               class="form-control" />
    </div>
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <br />
    <button type="submit"
            class="btn btn-primary">
        Reset Password
    </button>
</form>